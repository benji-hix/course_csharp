@model Association

<div class="container w-25 flex v j-center">
    <h2>Add Category</h2>
    <form class="form" method="post" asp-action="CreateProductAssociation" asp-controller="Product" asp-route-id="@ViewBag.ProductId">
            <input type="hidden" asp-for="ProductId" value="@ViewBag.ProductId">
            <label asp-for="CategoryId" class="input w-content">
                <select asp-for="CategoryId">
                    @foreach (Category category in ViewBag.AvailableCategories)
                    {
                        <option value="@category.CategoryId">@category.Name</option>
                    }
                </select>
            </label>
            <input type="submit" value="Submit" class="button">
    </form>
</div>