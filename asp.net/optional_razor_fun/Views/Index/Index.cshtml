<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Razor Fun</title>
</head>
<body>
    <h1>Here are some delicious Foods!</h1>
    @{
        List<string> ListFood = new List<string>() 
            {"Apple Pie", "Pizza", "Cinnamon Rolls", 
            "Lasagna", "Donuts", "Chocolate Cake", "Burritos"};
        foreach (string entry in ListFood)
        {
            if ((char)entry[0] == 'C')
            {
                <p style="color:red">@entry</p>
            }
            else{
                <p>@entry</p>
            }
        }
    }
</body>
</html>